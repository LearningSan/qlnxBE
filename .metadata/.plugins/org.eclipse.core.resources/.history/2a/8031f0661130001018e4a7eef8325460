	<script>
    (() => {
      const state = {};

      let context = null;
      let nodesToDestroy = [];
      let pendingUpdate = false;

      function destroyAnyNodes() {
        // destroy current view template refs before rendering again
        nodesToDestroy.forEach((el) => el.remove());
        nodesToDestroy = [];
      }

      // Function to update data bindings and loops
      // call update() when you mutate state and need the updates to reflect
      // in the dom
      function update() {
        if (pendingUpdate === true) {
          return;
        }
        pendingUpdate = true;

        document
          .querySelectorAll(".search-form")
          .forEach((el) => {
            el.setAttribute("space", 0);
          });

        document.querySelectorAll(".features-container").forEach((el) => {
          el.setAttribute("space", 8);
        });

        document.querySelectorAll(".about-section").forEach((el) => {
          el.setAttribute("space", 80);
        });

        document.querySelectorAll(".footer-container").forEach((el) => {
          el.setAttribute("space", 121);
        });

        document.querySelectorAll(".footer-columns-container").forEach((el) => {
          el.setAttribute("space", 53);
        });

        destroyAnyNodes();

        pendingUpdate = false;
      }

      // Update with initial state on first load
      update();
    })();
  </script>
