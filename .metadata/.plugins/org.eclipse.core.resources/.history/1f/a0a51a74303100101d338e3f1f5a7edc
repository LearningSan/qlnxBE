  <script>
  document.querySelectorAll('.seat-image[data-type="available"]').forEach(seat => {
    const originalSrc = seat.src;
    const hoverSrc = "https://cdn.builder.io/api/v1/image/assets/TEMP/0bbcedd1aad4628758a681e1de84cbc8ad3ca1f2"; // Selected seat
    const clickedSrc = "https://cdn.builder.io/api/v1/image/assets/TEMP/7d942587872f43a85f25f1e57322a69dfa8b7b63"; // Sold seat

    let isClicked = false;

    seat.addEventListener('mouseover', () => {
      if (!isClicked) seat.src = hoverSrc;
    });

    seat.addEventListener('mouseout', () => {
      if (!isClicked) seat.src = originalSrc;
    });

    seat.addEventListener('click', () => {
      seat.src = clickedSrc;
      isClicked = true;
    });
  });
</script>

